        stage('tests') {
            steps {
               bat 'cd C:/Users/User/Desktop/dev/Vex/backend/api/microsservices/vex - conta && npm test'
            }
        }
        
        stage('commit') {
            steps {
               bat 'cd C:/Users/User/Desktop/dev/Vex && git add . && git commit -m "@v1.2.8 - testando a esteira de pipeline do jenkins" && git push'
            }
        }

    }
       
}   